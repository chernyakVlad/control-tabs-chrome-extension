{
    "name": "Tabs conrol extension",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Chrome Ext"
    },  
    "permissions": [
        "tabs",
        "power",
        "storage",
        "webNavigation"
    ]
}