{
    "name": "Tabs conrol extension",
    "version": "1.0",
    "description": "Tabs conrol extension",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "icons/app/icon16.png",
        "32": "icons/app/icon32.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Chrome Ext"
    },  
    "options_page": "popup.html",
    "permissions": [
        "tabs",
        "power",
        "storage",
        "webNavigation",
        "notifications"
    ]
}